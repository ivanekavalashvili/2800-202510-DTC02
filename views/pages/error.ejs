<%- include('../partials/header', { user: locals.user, role: locals.role }) %>

    <div class="container mx-auto px-4 py-8 flex flex-col items-center justify-center min-h-[70vh]">
        <div class="bg-white rounded-lg shadow-lg p-8 max-w-md w-full text-center">
            <svg class="w-24 h-24 mx-auto mb-6" viewBox="0 0 64 64" fill="none">
                <rect width="64" height="64" rx="16" fill="#ffcccc" />
                <path
                    d="M32 16c-8.837 0-16 7.163-16 16s7.163 16 16 16 16-7.163 16-16-7.163-16-16-16zm0 28c-6.627 0-12-5.373-12-12s5.373-12 12-12 12 5.373 12 12-5.373 12-12 12z"
                    fill="#e74c3c" />
                <rect x="30" y="24" width="4" height="12" rx="2" fill="#e74c3c" />
                <circle cx="32" cy="40" r="2" fill="#e74c3c" />
            </svg>

            <h1 class="text-3xl font-bold text-gray-800 mb-4">
                <%= statusCode || 500 %> Error
            </h1>
            <p class="text-xl text-gray-600 mb-6">
                <%= message || "Something went wrong" %>
            </p>

            <div class="flex flex-col space-y-4">
                <a href="javascript:history.back()"
                    class="px-6 py-3 bg-gray-200 hover:bg-gray-300 rounded-lg text-gray-800 font-medium transition-colors">
                    Go Back
                </a>
                <a href="/"
                    class="px-6 py-3 bg-[#2e8b3d] hover:bg-[#247a32] rounded-lg text-white font-medium transition-colors">
                    Return Home
                </a>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>